<form>
    <field>
        <id>user.scope</id>
        <label>Defined By</label>
        <type>info</type>
    </field>
    <field>
        <id>user.disabled</id>
        <label>Disabled</label>
        <type>checkbox</type>
        <help>Deny authentication, only applicable for local users</help>
    </field>
    <field>
        <id>user.name</id>
        <label>Username</label>
        <type>text</type>
    </field>
    <field>
        <id>user.descr</id>
        <label>Full name</label>
        <type>text</type>
        <help>User's full name, for your own information only</help>
    </field>
    <field>
        <id>user.email</id>
        <label>E-mail</label>
        <type>text</type>
        <help>User's e-mail address, for your own information only</help>
    </field>
    <field>
        <id>user.comment</id>
        <label>Comment</label>
        <type>textbox</type>
        <help>User comment, for your own information only</help>
    </field>
    <field>
        <id>user.landing_page</id>
        <label>Preferred landing page</label>
        <type>text</type>
        <help>Preferred landing page after login or authentication failure</help>
    </field>
    <!--XXX: implement? -->
    <field>
        <id>user.language</id>
        <label>Language</label>
        <type>dropdown</type>
    </field>
    <field>
        <id>user.shell</id>
        <label>Login shell</label>
        <type>dropdown</type>
    </field>
    <!--XXX: datepicker -->
    <field>
        <id>user.expires</id>
        <label>Expiration date</label>
        <type>text</type>
    </field>
    <!--XXX:  Group Memberships -->
    <field>
        <id>user.priv</id>
        <label>Privileges</label>
        <type>select_multiple</type>
    </field>
    <!--XXX: User Certificates?? -->
    <!--XXX: API keys, move to seperate tab?-->
    <!--XXX: qrcode for OTP seed-->
    <field>
        <id>user.otp_seed</id>
        <label>Scope</label>
        <type>text</type>
    </field>
    <field>
        <id>user.authorizedkeys</id>
        <label>Authorized Keys</label>
        <type>textbox</type>
    </field>

</form>
